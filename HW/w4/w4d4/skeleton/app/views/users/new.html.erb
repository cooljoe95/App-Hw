<form action="<%= users_url %>" method="post">
  <%= auth_token %>
  <input type="text" name="user[username]" placeholder="Username" value="<%= @user.username %>">
  <input type="password" name="user[password]" placeholder="Password" value="<%= @user.password %>">

  <input type="submit" value="Create Account">
</form>

<% content_for :footer do %>
  <p>This is the user's new page.</p>
<% end %>
